@model LoginUser


    <div class="card w-50">
    <h3 style="text-align: center;" class="card-header
">Login</h3>
        <div class="card-body">
            <form asp-action="LetMeIn" asp-controller="Home" method="POST">
                <div class="form-group mx-sm-3 mb-2
">
                    <label asp-for="LoginEmail"></label>
                    <input class="form-control" asp-for="LoginEmail" /> <br />
                    <span class="text-danger"
                    asp-validation-for="LoginEmail"></span>
                </div>
                <div class="form-group mx-sm-3 mb-2
">
                    <label asp-for="LoginPassword"></label>
                    <input class="form-control" asp-for="LoginPassword" /> <br />
                    <span class="text-danger"
                    asp-validation-for="LoginPassword"></span>
                </div>
                <a href="/register">You don't have an account? Register Now!</a><br>
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
    </div>
