
@model User

    <div style="margin-top: 100px;" class="d-flex justify-content-center">
        <div class="card w-50">
                <h3 class="card-header">Register</h3>
            <div class="card-body">
                <form asp-action="Register" asp-controller="Home" method="POST">
                    <div  class="form-group mx-sm-3 mb-2
        ">
                        <label asp-for="FirstName"></label>
                        <input class="form-control" asp-for="FirstName" /> <br />
                        <span class="text-danger"
                        asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group mx-sm-3 mb-2
        ">
                        <label asp-for="LastName"></label>
                        <input class="form-control" asp-for="LastName" /> <br />
                        <span class="text-danger"
                        asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group mx-sm-3 mb-2
        ">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" /> <br />
                        <span class="text-danger"
                        asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group mx-sm-3 mb-2
        ">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" /> <br />
                        <span class="text-danger"
                        asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group mx-sm-3 mb-2
        ">
                        <label asp-for="Confirm"></label>
                        <input class="form-control" asp-for="Confirm" /> <br />
                        <span class="text-danger"
                        asp-validation-for="Confirm"></span>
                    </div>
                    <a href="/login">You already have an account? Login Now!</a><br>
                    <button class="btn btn-primary" type="submit">Register</button>
                </form>
            </div>
        </div>
    </div>